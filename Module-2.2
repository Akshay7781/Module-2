//write a program to find the simple intrest & compound intrest
#include<stdio.h>
#include<math.h>
void main()
{
    float p,r,t,si,a,ci;
    
    printf("enter the value of principle amount=");
    scanf("%f",&p);
    
    printf("\nenter the rate of intrest=");
    scanf("%f",&r);
    
    printf("\nenter the time duration=");
    scanf("%f",&t);
    
    si=(p*r*t)/100;
   
    printf("\nThe simple intrest is =%f",si);
    
    a=p*(pow((1+r/100),t));
    ci=a-p;
    
    printf("\nThe compound intrest is =%f",ci);
    
}